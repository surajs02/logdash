{
  "name": "@surajs02/logdash",
  "version": "1.0.5",
  "description": "Simple and customizable log functions that can integrate with lodash.",
  "main": "./dist/logdash.js",
  "scripts": {
    "build": "tsc",
    "testNoWatch": "mocha --require ts-node/register --extensions ts,tsx src './**/test*.{ts,tsx}'",
    "test": "mocha --require ts-node/register --extensions ts,tsx --watch --watch-files src './**/test*.{ts,tsx}'",
    "testLogFuncs": "mocha --require ts-node/register --extensions ts,tsx --watch --watch-files src './**/testLogFuncs.{ts,tsx}'",
    "testOptions": "mocha --require ts-node/register --extensions ts,tsx --watch --watch-files src './**/testOptions.{ts,tsx}'",
    "testModule": "npm run build && mocha src/tests/testModule.js",
    "preDeploy": "npm run testNoWatch && npm run testModule && npm run build",
    "deployPatch": "npm run preDeploy && npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/surajs02/logdash.git"
  },
  "keywords": [],
  "author": "Suraj Sharma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/surajs02/logdash/issues"
  },
  "homepage": "https://github.com/surajs02/logdash#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "lodash": "^4.17.15"
  },
  "files": [
    "dist/*"
  ]
}
